<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_homepage"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="25dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_homepage_img_character"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight=".33"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundImageView" />

    <LinearLayout
        android:id="@+id/item_homepage_text_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".77"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/item_homepage_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/black"
            android:textFontWeight="900"/>

        <TextView
            android:id="@+id/item_homepage_tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textSize="21sp"
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:letterSpacing=".02"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/item_homepage_tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:letterSpacing=".02"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>